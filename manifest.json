{
  "manifest_version": 3,
  "name": "Shopee Product Auto Publisher",
  "version": "1.0.0",
  "description": "Automatically publish qualified draft products on Shopee seller center",
  
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  
  "host_permissions": [
    "https://seller.shopee.ph/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["https://seller.shopee.ph/portal/product/list/unpublished/draft*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Shopee Auto Publisher"
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png", 
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 