{
  "manifest_version": 3,
  "name": "Shopee Product Auto Publisher",
  "version": "1.0.0",
  "description": "Automatically publish qualified draft products on Shopee seller center",
  
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  
  "host_permissions": [
    "https://seller.shopee.ph/*",
    "https://seller.shopee.com.my/*",
    "https://seller.shopee.sg/*",
    "https://seller.shopee.co.th/*",
    "https://seller.shopee.vn/*",
    "https://seller.shopee.co.id/*",
    "https://seller.shopee.com.br/*",
    "https://seller.shopee.com/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": [
        "https://seller.shopee.ph/portal/product/list/unpublished/draft*",
        "https://seller.shopee.com.my/portal/product/list/unpublished/draft*",
        "https://seller.shopee.sg/portal/product/list/unpublished/draft*",
        "https://seller.shopee.co.th/portal/product/list/unpublished/draft*",
        "https://seller.shopee.vn/portal/product/list/unpublished/draft*",
        "https://seller.shopee.co.id/portal/product/list/unpublished/draft*",
        "https://seller.shopee.com.br/portal/product/list/unpublished/draft*",
        "https://seller.shopee.com/portal/product/list/unpublished/draft*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Shopee Auto Publisher"
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png", 
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 